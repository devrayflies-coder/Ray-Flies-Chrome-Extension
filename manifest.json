{
  "manifest_version": 3,
  "name": "Rayflies Image Sender",
  "version": "1.0",
  "description": "Send images to Rayflies pages",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://dev.rayflies.ai/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_title": "Rayflies Image Sender"
  }
}
